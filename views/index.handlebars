<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-5 read">
    <h2>Ready to Read:</h2>
    <ul>
      {{#each books}}
      {{#unless completed}}
      {{> book-block completed=false}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="col-md-5 completed">
    <h2>Completed:</h2>
    <ul>
      {{#each books}}
      {{#if completed}}
      {{> book-block completed=true}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
  <div class="col-md-1"></div>
</div>


<div class="row">
  <div class="col-md-12">
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Book Title:</label>
        <input type="text" id="ca" name="name">
      </div>

      <button class="submit" type="submit">Add Book</button>
    </form>
    <p>Enter a new book and move once it has been read.</p>
  </div>
</div>